<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".DashBoard">


    <Button
        android:id="@+id/gmap_button"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="128dp"
        android:drawableLeft="@drawable/gm"
        android:onClick="loadGmap"
        android:text="Google Maps"
        android:backgroundTint="@color/browser_actions_bg_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/amazon_btn"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gmap_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/amazon"
        android:onClick="loadAmazon"
        android:text="Amazon"
        android:backgroundTint="@color/browser_actions_bg_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmap_button" />

    <Button
        android:id="@+id/flipkart_btn"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="loadFlipkart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="OLA"
        android:drawableLeft="@drawable/ola"
        android:backgroundTint="@color/browser_actions_bg_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amazon_btn" />

    <Button
        android:id="@+id/bigbasket_btn"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="loadBigbasket"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/browser_actions_bg_grey"
        android:layout_marginTop="0dp"
        android:text="grofers"
        android:drawableLeft="@drawable/groffers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flipkart_btn" />

    <Button
        android:id="@+id/OneMg_btn"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="loadNedMeds"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="NetMeds"
        android:drawableLeft="@drawable/netmeds"
        android:backgroundTint="@color/browser_actions_bg_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigbasket_btn" />

    <Button
        android:id="@+id/myntra_btn"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="loadMyntra"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Myntra"
        android:backgroundTint="@color/browser_actions_bg_grey"
        android:drawableLeft="@drawable/myntra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OneMg_btn" />

    <Button
        android:id="@+id/menu_logout"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="signOut"
        android:backgroundTint="@color/browser_actions_bg_grey"
        android:drawableLeft="@drawable/ic_logout_app"
        android:text="LOG OUT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myntra_btn"
        tools:layout_editor_absoluteX="99dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/illustration" />

    
</androidx.constraintlayout.widget.ConstraintLayout>