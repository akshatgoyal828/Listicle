<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".NewCollectionActivity">

    <EditText
        android:id="@+id/edit_text_title_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:hint="Collection Name"
        android:inputType="text" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"

        android:id="@+id/radioGroupImages">

        <RadioButton
            android:id="@+id/radio_one_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableLeft="@drawable/travelbookings"
            android:onClick="checkButton"
            android:text="1"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/radio_four_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableLeft="@drawable/bills"
            android:onClick="checkButton"
            android:text="2"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/radio_five_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cosmetics"
            android:onClick="checkButton"
            android:text="3"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/radio_six_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dailyaccessories"
            android:onClick="checkButton"
            android:text="4"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/radio_7_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/insurance"
            android:onClick="checkButton"
            android:text="5"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/radio_8_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/stocks"
            android:onClick="checkButton"
            android:text="6"
            android:textSize="0sp" />
        <RadioButton
            android:id="@+id/radio_9_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="0sp"
            android:drawableLeft="@drawable/revenue"
            android:onClick="checkButton"/>
        <RadioButton
            android:id="@+id/radio_10_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="0sp"
            android:drawableLeft="@drawable/taxcalculations"
            android:onClick="checkButton"/>

        <RadioButton
            android:id="@+id/radio_three_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/movies"
            android:onClick="checkButton"
            android:text="9"
            android:textSize="0sp" />

    </RadioGroup>


</LinearLayout>